# 现代化后台管理系统环境变量配置模板
# 复制此文件为 .env 并根据实际情况修改配置值

# =============================================================================
# 基础应用配置
# =============================================================================
APP_TITLE=现代化后台管理系统
APP_VERSION=1.0.0
APP_DESCRIPTION=基于Dash的企业级后台管理系统
FLASK_ENV=development

# =============================================================================
# 安全配置
# =============================================================================
# 应用密钥（生产环境必须修改为随机字符串）
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# JWT令牌有效期（小时）
JWT_ACCESS_TOKEN_EXPIRES=24
JWT_REFRESH_TOKEN_EXPIRES=720

# 会话配置
SESSION_COOKIE_NAME=admin_session
SESSION_COOKIE_SECURE=false
PERMANENT_SESSION_LIFETIME=24

# =============================================================================
# 数据库配置
# =============================================================================
# 数据库连接URL
# SQLite: sqlite:///admin_system.db
# PostgreSQL: postgresql://user:password@localhost:5432/admin_system
# MySQL: mysql://user:password@localhost:3306/admin_system
DATABASE_URL=sqlite:///admin_system.db

# 开发环境数据库
DEV_DATABASE_URL=sqlite:///dev_admin_system.db

# =============================================================================
# Redis缓存配置
# =============================================================================
REDIS_URL=redis://localhost:6379/0
DEV_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# 分页配置
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# 文件上传配置
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# =============================================================================
# 邮件配置
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=admin@example.com

# =============================================================================
# 密码安全策略
# =============================================================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# =============================================================================
# 登录安全配置
# =============================================================================
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# =============================================================================
# API配置
# =============================================================================
API_RATE_LIMIT=100/hour
API_ENABLE_CORS=true

# =============================================================================
# 监控配置
# =============================================================================
ENABLE_METRICS=false
SENTRY_DSN=

# =============================================================================
# 浏览器支持配置
# =============================================================================
STRICT_BROWSER_CHECK=false

# =============================================================================
# 开发环境特定配置
# =============================================================================
SQLALCHEMY_ECHO=false
DASH_HOT_RELOAD=true
DASH_DEV_TOOLS=true

# =============================================================================
# 生产环境特定配置
# =============================================================================
# 生产环境时取消注释并配置以下选项
# PREFERRED_URL_SCHEME=https
# SESSION_COOKIE_SECURE=true